//Actors that utilize GLDefs to make colored light Lightes. See GLDEFS for more.

ACTOR RedLight
{
	+NONETID
	+NOGRAVITY
	+DONTSPLASH
	+NOINTERACTION
	+CLIENTSIDEONLY
	RenderStyle None
	States
	{
		Spawn:
		TNT1 A 0 
		TNT1 A 1
		Stop
	}
}

{
	Radius 2
	Height 2
	RenderStyle Add
	+CLIENTSIDEONLY
	+NOINTERACTION
	+NONETID
	Alpha 0.8
	Scale 0.4
	States
	{
	Spawn:
		RDSC A 1 Bright A_FadeOut(0.05)
		Loop
	}
}
Actor ShockSlamWarningFX
{
	+BRIGHT
	+CLIENTSIDEONLY
	+NOINTERACTION
	+NONETID
	Scale 0.7
	States
	{
		Spawn:
		TNT1 A 0 nodelay A_Warp(AAPTR_DEFAULT, 0, 0, 0, 0, WARPF_TOFLOOR)
		EZON ABCDEF 1 A_SetTics(random(0, 1))
		Spawn1:
		EZON ABCDEF 1 A_FadeOut(0.05)
		loop
		Death:
		TNT1 A 1
		stop
	}
}

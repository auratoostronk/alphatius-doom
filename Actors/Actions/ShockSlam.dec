const int shockslam_radius = 256;
Actor ShockSlamMissile
{
	Projectile
	ProjectileKickback 20
	Obituary "%k > \cvShock Slam\c- > %o"
	States
	{
		Spawn:
		TNT1 A 0 nodelay A_Warp(AAPTR_DEFAULT, 0, 0, 0, 0, WARPF_TOFLOOR)
		Death:
		TNT1 A 0 A_PlaySound("BF4Explosion", CHAN_AUTO)
		TNT1 A 0 A_Quake(3, 12, 0, 384)
		TNT1 A 0 A_Quake(5, 20, 0, 256)
		TNT1 A 0 A_Explode(35, shockslam_radius, !XF_HURTSOURCE, true, shockslam_radius)
		TNT1 A 25
		stop
	}
}

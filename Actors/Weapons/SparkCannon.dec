	}
}
Actor FluxOrbMissile : FastProjectile
{
	RenderStyle add
	Speed 64
	Radius 8
	Height 16
	Damage (0)  
	Scale 1.6
	Health 10000
	ProjectileKickback 160
	Obituary "%k > \cgSpark Cannon (Alt)\c- > %o"
	+DONTSPLASH
	-NOBLOCKMAP
	+SHOOTABLE
	DamageFactor "SparkRail", 10000.0
	+BRIGHT
	Decal PlasmaScorchLower
	States
	{
	Spawn:
		SPBA ABC 2
		loop

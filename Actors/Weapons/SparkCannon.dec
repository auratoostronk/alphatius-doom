		TNT1 A 0 A_SetScale(scalex * 1.5, scaley * 1.5)
		TNT1 A 0 A_Explode(150, 320)
		TNT1 AAAAAAAAAA 0 A_SpawnItemEx("FluxOrbFX", 0, 0, 0, frandom(-16.0, 16.0), frandom(-16.0, 16.0), frandom(-16.0, 16.0))
		TNT1 A 0 A_SpawnItemEx("ExplodeHitFlash")
		TNT1 A 0 A_SpawnItemEx("ExplodeHitFlash2")
		TNT1 A 0 A_SpawnItem("ExplodeSmokeRing")
		TNT1 AAAAA 0 A_SpawnItemEx("ExplodeSmoke",0,0,0,frandom(-4,4),frandom(-4,4),frandom(-4,4))
		TNT1 AAAA 0 A_CustomMissile("ExplodeSmokeSpawner",0,0,random(0,360),4,random(0,360))
		DMFX DEFGHI 2
		TNT1 A 35 
		stop
		
	Death:
		TNT1 A 0 A_JumpIf(health < -20, "RailedDeath")  
		TNT1 A 0 A_Explode(40, 192)
		TNT1 A 0 A_SpawnItemEx("ExplodeHitFlash")
		TNT1 A 0 A_SpawnItemEx("ExplodeHitFlash2")
		TNT1 A 0 A_SpawnItem("ExplodeSmokeRing")
		TNT1 AAAAA 0 A_SpawnItemEx("ExplodeSmoke",0,0,0,frandom(-2,2),frandom(-2,2),frandom(-2,2))
		TNT1 AAAA 0 A_CustomMissile("ExplodeSmokeSpawner",0,0,random(0,360),2,random(0,360))
		DMFX DEFGHI 2
		TNT1 A 35 
		stop
		
	}
}

